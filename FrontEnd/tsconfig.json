{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "types": ["jasmine"],
        "baseUrl": "./",
        "paths": {
            "clarityIconsShapes": ["node_modules/clarity-icons/shapes"]
